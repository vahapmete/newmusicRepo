@model IEnumerable<MainMusicStore.Models.DbModels.Product>
@{
    ViewData["Title"] = "Home Page";
}
@foreach (var product in Model)
{
    <div class="row pb-3 backgroundWhite ">
        <div class="col-lg-3 col-md-6" >
            <div class="row p-0">
                <div class="col-12  p-0" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card " style="border:0px; padding: 0px !important">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@product.Title</b></p>
                            <p class="card-title text-primary">by <b>@product.Author</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p>List Price: <strike><b class="">@product.ListPrice.ToString("0.00")</b></strike></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon">As low as: <b class="">@product.Price100</b></p>
                        </div>
                    </div>
                    <div  style="margin: 0px;border-radius: 0px 0px 5px 5px; padding:0px !important ;">
                        <a  asp-action="Detail" class=" mb-0 btn btn-info form-control" asp-route-id="@product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
